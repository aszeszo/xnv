--- src/Makefile.am	2007-01-10 19:12:16.281143000 -0800
+++ src/Makefile.am	2007-01-10 19:24:44.193611000 -0800
@@ -67,3 +67,35 @@
          riva_tbl.h \
          riva_type.h \
          riva_xaa.c
+
+
+# Generate linker mapfiles for symbols found in other modules and use them
+# and library flag additions to make sure all symbols are resolvable
+
+MAPFILES = \
+	mapfile-nv_drv-external	 	\
+	mapfile-riva128-external
+
+BUILT_SOURCES = $(MAPFILES)
+
+nv_drv_la_LDFLAGS += \
+	-Wl,-M,mapfile-riva128-external \
+	-lddc -lfb -li2c -lint10 -lramdac -lshadowfb -lvbe -lvgahw -lxaa \
+	-lfbdevhw -lXfont -lm
+
+riva128_la_LDFLAGS += \
+	-lddc -lfb -li2c -lint10 -lramdac -lshadowfb -lvbe -lvgahw -lxaa \
+	-lfbdevhw -lXfont
+
+mapfiles: $(MAPFILES)
+
+mapfile-nv_drv-external: $(nv_drv_la_OBJECTS)
+mapfile-riva128-external: $(riva128_la_OBJECTS)
+
+mapfile-%-external: 
+	-rm -f $@
+	printf '# Functions exported to loadable modules\n\n' > $@
+	printf '{\n  global:\n' >> $@
+	/usr/ccs/bin/nm -g $? | grep -v UNDEF | sed -n -e 's/^.*\|FUNC \|GLOB \|.*\|\(.*\)$$/    \1 = FUNCTION extern;/p' -e 's/^.*\|OBJT \|GLOB \|.*\|\(.*\)$$/    \1 = DATA extern;/p' >> $@
+	printf '};\n' >> $@
+
