# This package should only be installed in the global zone since it
# only contains kernel modules, so override the default from common_actions
<transform set name=variant.opensolaris.zone -> delete value nonglobal>

set name=pkg.fmri value=pkg:/system/kernel/hardware-cursor@$(OSPKGVERS)
set name=pkg.description \
    value="hwc is a kernel streams module that may be pushed onto a mouse device stream to cause mouse movements to directly update the cursor position on a frame buffer device supporting the hardware cursor ioctls."
set name=pkg.summary value="Hardware Cursor Kernel modules"
dir path=kernel group=sys
dir path=kernel/strmod group=sys
dir path=kernel/strmod/$(ARCH64) group=sys
file path=kernel/strmod/$(ARCH64)/hwc group=sys mode=0555
$(i386_ONLY)file path=kernel/strmod/hwc group=sys mode=0555
legacy pkg=SUNWxwmod \
    desc="Kernel modules used by the Solaris X Window System Server" \
    name="X Window System kernel modules"
