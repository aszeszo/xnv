# SUNWxwcft (X Window System common (not required) fonts) postremove script.

include fc_rebuild

include mkfontdir

update_fontdir_and_alias $BASEDIR/X11/lib/X11/fonts/75dpi
update_fontdir_and_alias $BASEDIR/openwin/lib/X11/fonts/Type1
update_fontdir_and_alias $BASEDIR/X11/lib/X11/fonts/misc
update_fontdir_and_alias $BASEDIR/X11/lib/X11/fonts/F3bitmaps
update_fontdir_and_alias $BASEDIR/X11/lib/X11/fonts/Type1

# These symlinks cannot be put into packages directly, or even with installf,
# since pkgadd/pkgmk/pkgrm can't handle files with = in their pathname.
rm -f $BASEDIR/../etc/X11/fontpath.d/Type1:pri=50

exit 0


