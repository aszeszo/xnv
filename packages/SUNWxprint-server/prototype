# Xprint printing server

i pkginfo
i copyright
i depend

!HOME=../openwin

d none openwin 0755 root bin

!search  $HOME/bin
d none openwin/bin 		0755 root bin
f none openwin/bin/Xprt         2755 root root

d none openwin/server 0755 root bin
d none openwin/server/etc 0755 root bin

#
# Xprint configuration files
#
d none openwin/server/etc/XpConfig 0755 root bin
d none openwin/server/etc/XpConfig/C 0755 root bin
d none openwin/server/etc/XpConfig/C/print 0755 root bin

!search $HOME/server/etc/XpConfig/C/print
f none openwin/server/etc/XpConfig/C/print/Xprinters 0755 root bin

d none openwin/server/etc/XpConfig/C/print/attributes 0755 root bin

!search $HOME/server/etc/XpConfig/C/print/attributes
f none openwin/server/etc/XpConfig/C/print/attributes/document 0755 root bin
f none openwin/server/etc/XpConfig/C/print/attributes/job 0755 root bin
f none openwin/server/etc/XpConfig/C/print/attributes/printer 0755 root bin 

d none openwin/server/etc/XpConfig/C/print/ddx-config 0755 root bin
d none openwin/server/etc/XpConfig/C/print/ddx-config/raster 0755 root bin

!search $HOME/server/etc/XpConfig/C/print/ddx-config/raster
f none openwin/server/etc/XpConfig/C/print/ddx-config/raster/pcl 0755 root bin
f none openwin/server/etc/XpConfig/C/print/ddx-config/raster/postscript 0755 root bin

d none openwin/server/etc/XpConfig/C/print/models 0755 root bin
d none openwin/server/etc/XpConfig/C/print/models/HPDJ1600C 0755 root bin
d none openwin/server/etc/XpConfig/C/print/models/HPDJ1600C/fonts 0755 root bin

!search $HOME/server/etc/XpConfig/C/print/models/HPDJ1600C
f none openwin/server/etc/XpConfig/C/print/models/HPDJ1600C/model-config 0755 root bin

d none openwin/server/etc/XpConfig/C/print/models/HPLJ4family 0755 root bin
d none openwin/server/etc/XpConfig/C/print/models/HPLJ4family/fonts 0755 root bin

!search $HOME/server/etc/XpConfig/C/print/models/HPLJ4family
f none openwin/server/etc/XpConfig/C/print/models/HPLJ4family/model-config 0755 root bin

d none openwin/server/etc/XpConfig/C/print/models/SPSPARC2 0755 root bin
d none openwin/server/etc/XpConfig/C/print/models/SPSPARC2/fonts 0755 root bin

!search $HOME/server/etc/XpConfig/C/print/models/SPSPARC2
