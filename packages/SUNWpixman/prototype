# Pixman library & development files

i pkginfo
i copyright
i depend

!HOME=../usr


!search      $HOME/include/pixman-1
d none include 						0755 root bin
d none include/pixman-1					0755 root bin
f none include/pixman-1/pixman.h			0444 root bin
f none include/pixman-1/pixman-version.h		0444 root bin

!search      $HOME/lib
d none lib 						0755 root bin
f none lib/libpixman-1.so.0				0755 root bin
s none lib/libpixman-1.so=libpixman-1.so.0

!search      $HOME/lib/pkgconfig
d none lib/pkgconfig					0755 root other
f none lib/pkgconfig/pixman-1.pc			0444 root bin

# 64-bit versions

!search      $HOME/lib/$plat_64
d none lib/$plat_64					0755 root bin
f none lib/$plat_64/libpixman-1.so.0			0755 root bin
s none lib/$plat_64/libpixman-1.so=libpixman-1.so.0

!search      $HOME/lib/$plat_64/pkgconfig
d none lib/$plat_64/pkgconfig				0755 root other
f none lib/$plat_64/pkgconfig/pixman-1.pc		0444 root bin
