# pciaccess library & development files

i pkginfo
i copyright
i depend

!HOME=../usr


!search      $HOME/include
d none include 						0755 root bin
f none include/pciaccess.h				0444 root bin

!search      $HOME/bin
d none bin 						0755 root bin
f none bin/scanpci					0755 root bin

!search      $HOME/lib
d none lib 						0755 root bin
f none lib/libpciaccess.so.0				0755 root bin
s none lib/libpciaccess.so=libpciaccess.so.0

!search      $HOME/lib/pkgconfig
d none lib/pkgconfig					0755 root other
f none lib/pkgconfig/pciaccess.pc			0444 root bin

# 64-bit versions

!search      $HOME/lib/$plat_64
d none lib/$plat_64					0755 root bin
s none lib/64=$plat_64
f none lib/$plat_64/libpciaccess.so.0			0755 root bin
s none lib/$plat_64/libpciaccess.so=libpciaccess.so.0

!search      $HOME/lib/$plat_64/pkgconfig
d none lib/$plat_64/pkgconfig				0755 root other
f none lib/$plat_64/pkgconfig/pciaccess.pc		0444 root bin

!search      $HOME/share/man/man1
d none share						0755 root sys
d none share/man					0755 root bin
d none share/man/man1					0755 root bin
f none share/man/man1/scanpci.1				0444 root bin

# Backwards compatibility link
d none X11						0755 root bin
d none X11/bin 						0755 root bin
s none X11/bin/scanpci=../../bin/scanpci
